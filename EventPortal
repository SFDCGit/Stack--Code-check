        <script type="text/javascript">
            var jq = jQuery.noConflict();
            var CToken = '{!$CurrentPage.parameters.CToken}';
            var UToken = '{!$CurrentPage.parameters.UToken}';
            mapAttendeeQuery = new Object();
            var varAttendeeId = '';
            jsMapAddendees = new Object();
            jsMapEventLevel = new Object();
                    jq(document).ready(function(){
                    jq("#btnCreateAddendee").click(function(){
                    jq("#popupContactCreate").modal();
                });
            
                jq("#popupContactCreateSave").click(function(){
                    addTableRow();
                    jq("#popupContactCreate").modal("hide");
                });
                
                jq("#btnSearchAddendee").click(function(){
                    jq("#popupSearch").modal();
                });
                         
                jq("#btsSearchClose").click(function(){
                   jq("#popupSearch").modal("hide");
                });
                
                jq("#btnSearchAttendee").click(function(){
                    
                    queryAttendee();
                });
                
                jq("#btnAddAttendee").click(function(){
                    
                    // Add Attendee to Campaign
                    addAttendeetoCampaign();
                });
                       });
             
            function addAttendeetoCampaign(){
                varAttendeeId = '';
                
                jq(".attendeeChk:checked").each(function()
                {
                    varAttendeeId+=jq(this).val()+",";
                });
                
                if(varAttendeeId != ''){
                    
                    Visualforce.remoting.Manager.invokeAction('{!$RemoteAction.EventPortal_Detail.addToCampaignMember}',
                    varAttendeeId,
                    CToken,
                    UToken,
                    function handleResultresponse(result, event){
                        if (event.status){
                            var tableRef = document.getElementById('tblExternal').getElementsByTagName('tbody')[0];

                            result.forEach(function(record) {
                        
                                // Insert a row in the table at the last row
                                var newRow   = tableRef.insertRow(tableRef.rows.length);
                                // Insert a cell in the row at index 0
                                var newCell1  = newRow.insertCell(0);
                                var newCell2  = newRow.insertCell(1);
                                var newCell3  = newRow.insertCell(2);
                                var newCell4  = newRow.insertCell(3);
                                var newCell5  = newRow.insertCell(4);
                                var newCell6  = newRow.insertCell(5);
                                // Append a text node to the cell
                                newCell1.innerHTML = mapAttendeeQuery[record.AttendeeId].strName;
                                newCell2.innerHTML = mapAttendeeQuery[record.AttendeeId].CompanyName;
                                newCell3.innerHTML = "";
                                newCell4.innerHTML = "";
                                newCell5.innerHTML = "";
                                newCell6.innerHTML = "";
                    
                            });
                        }
                    },
                    {escape: true})
                }
            }
                
            function queryAttendee () {
                var varAttendeeSearch = document.getElementById("attendeeSearch").value;
                var varAttendeeList = document.getElementById("attendeeList"); 
                mapAttendeeQuery = new Object();
                var result = Visualforce.remoting.Manager.invokeAction('{!$RemoteAction.EventPortal_Detail.queryAttendee}',varAttendeeSearch,handleResultresponse);
    
                function handleResultresponse(result, event){
                    if (event.status){
                        var html = '<div class="table-responsive"><table class="table table-hover">';
                        html += '<thead>';
                        html += '<tr>';
                        html += '<th>';
                        html += '<label for="select-all">';
                        html += '<input name="checkbox" type="checkbox" id="select-all" />';
                        html += '<span>select all</span>';
                        html += '</label>';
                        html += '</th>';
                        html += '<th scope="col"><span>Name</span></th>';
                        html += '<th scope="col"><span>Company</span></th>';
                        html += '<th scope="col"><span>Email</span></th>';
                        html += '</tr>';
                        html += '</thead>';
                        html += '<tbody>';
                        
                        result.forEach(function(record) {
                            
                            var AttendeeInfo = {
                                strId           : record.strId, 
                                strName         : record.strName,
                                strEmail        : typeof record.strEmail === "undefined" ? "" : record.strEmail,
                                CompanyName     : typeof record.CompanyName === "undefined" ? "" : record.CompanyName
                            }
                            
                            html += '<tr>';
                            html += '<td><input name="checkbox" type="checkbox" class="attendeeChk" id="chk' + AttendeeInfo.strId + '" value="' + AttendeeInfo.strId +  '" /></td>';
                            html += '<td>' + AttendeeInfo.strName + '</td>';
                            html += '<td>' + AttendeeInfo.CompanyName + '</td>';
                            html += '<td>' + AttendeeInfo.strEmail  + '</td>';
                            html += '</tr>';
                            
                            mapAttendeeQuery[record.strId] = AttendeeInfo;
                            
                        })
    
                        html += '</tbody>';
                        html += '</table></div>';
    
                        varAttendeeList.innerHTML = html;
                    }
                }
            }
        
            function addTableRow () {
                var varFirstName = document.getElementById("firstName").value;
                var varLastName = document.getElementById("lastName").value;

                var result = Visualforce.remoting.Manager.invokeAction('{!$RemoteAction.EventPortal_Detail.createAttendee}',varFirstName,varLastName,handleaddAttendeeResultresponse);

                function handleaddAttendeeResultresponse(result, event){
                    if (event.status){

                        var tableRef = document.getElementById('tblExternal').getElementsByTagName('tbody')[0];
                        // Insert a row in the table at the last row
                        var newRow   = tableRef.insertRow(tableRef.rows.length);
                        // Insert a cell in the row at index 0
                        var newCell1  = newRow.insertCell(0);
                        var newCell2  = newRow.insertCell(1);
                        var newCell3  = newRow.insertCell(2);
                        var newCell4  = newRow.insertCell(3);
                        var newCell5  = newRow.insertCell(4);
                        var newCell6  = newRow.insertCell(5);
                        // Append a text node to the cell
                        newCell1.innerHTML = varFirstName + " " + varLastName;
                        newCell2.innerHTML = "";
                        newCell3.innerHTML = "";
                        newCell4.innerHTML = "";
                        newCell5.innerHTML = "";
                        newCell6.innerHTML = "";
                       hideAddAttendeePopup();
                    }
                }
            }

          
            
        </script>
    </html>
</apex:page>
